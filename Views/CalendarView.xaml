<UserControl x:Class="WinTodoNag.Views.CalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal"
                Margin="6">
      <Button Content="Prev"
              Command="{Binding PrevMonthCommand}"/>
      <TextBlock Text="{Binding CurrentMonth, StringFormat={}{0:MMMM yyyy}}"
                 FontWeight="Bold"
                 Margin="8,0"/>
      <Button Content="Next"
              Command="{Binding NextMonthCommand}"/>
    </StackPanel>

    <!-- ItemsControl uses a UniformGrid for layout -->
    <ItemsControl Grid.Row="1"
                  ItemsSource="{Binding MonthCells}"
                  Margin="6">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid Rows="6"
                       Columns="7"/>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Border BorderBrush="Gray"
                  BorderThickness="0.5"
                  Padding="4"
                  Margin="1"
                  Background="White">
            <StackPanel>
              <TextBlock Text="{Binding Date, StringFormat={}{0:dd}}"
                         FontWeight="Bold"/>
              <ItemsControl ItemsSource="{Binding Entries}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="â€¢ {Binding}"
                               FontSize="11"/>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </StackPanel>
          </Border>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </Grid>
</UserControl>
