<Window x:Class="WinTodoNag.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WinTodoNag.ViewModels"
        xmlns:views="clr-namespace:WinTodoNag.Views"
        mc:Ignorable="d"
        Title="WinTodoNag"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterScreen">

  <Window.DataContext>
    <vm:MainViewModel/>
  </Window.DataContext>

  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="File">
        <MenuItem Header="Open Data File"
                  Command="{Binding OpenDataFileCommand}"/>
        <MenuItem Header="Settings"
                  Command="{Binding OpenSettingsCommand}"/>
      </MenuItem>
    </Menu>

    <TabControl>
      <TabItem Header="List">
        <!-- use the view, and bind its DataContext to the VM -->
        <views:TaskListView DataContext="{Binding TaskListVM}"/>
      </TabItem>
      <TabItem Header="Calendar">
        <views:CalendarView DataContext="{Binding CalendarVM}"/>
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>
